# JCink Crawler Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# === Forum Settings ===
FORUM_BASE_URL=https://therewasanidea.jcink.net
FORUM_COMPLETE_ID=49
FORUM_INCOMPLETE_ID=59
FORUM_COMMS_ID=31
FORUMS_EXCLUDED=4,5,6,7,8,9,10,11,12,14,15,16,18,52,56,57,58,60,63,69,85,86,87,88,90,91,92,95

# === Crawl Intervals ===
CRAWL_DISCOVERY_INTERVAL_MINUTES=1440
CRAWL_THREADS_INTERVAL_MINUTES=60
CRAWL_PROFILES_INTERVAL_MINUTES=1440
CRAWL_QUOTES_BATCH_SIZE=5
QUOTE_MIN_WORDS=3

# === Rate Limiting ===
REQUEST_DELAY_SECONDS=0.5
MAX_CONCURRENT_REQUESTS=5

# === Bot Credentials (for authenticated crawling) ===
BOT_USERNAME=Watcher
BOT_PASSWORD=

# === ACP Credentials (for SQL-based post tracking) ===
# Uses JCink Admin CP to dump the posts table for accurate post dates.
# Leave blank to use HTML-only post tracking.
ADMIN_USERNAME=
ADMIN_PASSWORD=
ACP_SYNC_INTERVAL_MINUTES=0

# === Filters ===
EXCLUDED_NAMES=Watcher,Null,Spider,Kat,RandomPrecision

# === Internal ===
CRAWLER_URL=http://localhost:8000
COLORTERM=truecolor
TERM=xterm-256color

# === Dashboard (run: python setup_dashboard.py) ===
DASHBOARD_PASSWORD_B64=
DASHBOARD_SECRET_KEY=change-me-in-production
